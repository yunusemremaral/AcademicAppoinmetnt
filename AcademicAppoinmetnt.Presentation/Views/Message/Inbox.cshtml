@model IEnumerable<Message>

@{
    ViewData["Title"] = "Gelen Kutusu";
    Layout = "~/Views/Shared/_LayoutAcademic.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">📩 Gelen Kutusu</h2>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Gönderen</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Mesaj</th>
                    <th scope="col">Tarih</th>
                    <th scope="col" class="text-center">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var message in Model)
                {
                    <tr>
                        <td>@message.SenderId</td>
                        <td>@message.MessageTitle</td>
                        <td>@message.MessageText</td>
                        <td>@message.SentDate.ToString("g")</td>
                        <td class="text-center">
                            <a href="@Url.Action("Delete", "Message", new { id = message.MessageId })"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Bu mesajı silmek istediğinize emin misiniz?');">
                                🗑 Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
