@model IEnumerable<Message>

@{
    ViewData["Title"] = "Gönderilen Mesajlar";
    Layout = "~/Views/Shared/_LayoutAcademic.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">📤 Gönderilen Mesajlar</h2>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Alıcı</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Mesaj</th>
                    <th scope="col">Tarih</th>
                    <th scope="col" class="text-center">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var message in Model)
                {
                    <tr>
                        <td>@message.ReceiverId</td> <!-- Alıcı -->
                        <td>@message.MessageTitle</td> <!-- Başlık -->
                        <td>@message.MessageText</td> <!-- Mesaj içeriği -->
                        <td>@message.SentDate.ToString("g")</td> <!-- Gönderilme tarihi -->
                        <td class="text-center">
                            <a href="@Url.Action("Delete", "Message", new { id = message.MessageId })"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Bu mesajı silmek istediğinize emin misiniz?');">
                                🗑 Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
