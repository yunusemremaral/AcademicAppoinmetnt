@model AppointmentViewModel

@{
    ViewData["Title"] = "Yeni Randevu Al";
    Layout = "~/Views/Shared/_LayoutAcademic.cshtml";
}
@{
    var now = DateTime.Now;
    var defaultStartTime = now.ToString("yyyy-MM-ddTHH:mm");
    var defaultEndTime = now.AddHours(1).ToString("yyyy-MM-ddTHH:mm"); // Varsayılan olarak 1 saat sonrası
}
<h2>Yeni Randevu Al</h2>


<form asp-action="Create" method="post">
    <input type="hidden" asp-for="StudentId" />  <!-- Öğrenci ID'si gizli alanda gönderiliyor -->

    <div class="form-group">
        <label>Akademisyen Seçin:</label>
        <select asp-for="TeacherId" asp-items="ViewBag.Teachers" class="form-control">
            <option value="">-- Akademisyen Seçin --</option>
        </select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Konu:</label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Başlangıç Zamanı:</label>
        <input asp-for="StartTime" type="datetime-local" class="form-control" value="@defaultStartTime" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Bitiş Zamanı:</label>
        <input asp-for="EndTime" type="datetime-local" class="form-control" value="@defaultEndTime" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>
