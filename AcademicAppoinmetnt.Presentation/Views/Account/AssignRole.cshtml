@model AssignRoleViewModel

<h2>Kullanıcıya Rol Ata</h2>
<form asp-action="AssignRole" method="post">
    <div class="form-group">
        <label asp-for="UserId">Kullanıcı Seç</label>
        <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="RoleId">Rol Seç</label>
        <select asp-for="RoleId" asp-items="Model.Roles" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-warning">Rol Ata</button>
</form>
